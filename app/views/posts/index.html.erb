<p id="notice"><%= notice %></p>
<div class="jumbotron">
  <h1>#G_Blogger... !</h1>
</div>


<table class="table table-hover">
  <thead>
    <tr>
      <th>TITLE</th>
      <th>BODY</th>
      <th>DATE</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.created_at.to_date %></td>
        <td><%= link_to 'Show', post, class: 'btn btn-info' %></td>
        <td><%= link_to 'Edit', edit_post_path(post), class: 'btn btn-warning' %></td>
        <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'ADD A NEW BLOG', new_post_path, class: 'btn btn-success' %>
